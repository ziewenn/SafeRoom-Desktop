                                <JFXButton fx:id="closeButton" styleClass="window-button-close">
                                    <graphic><SVGPath content="M18 6 6 18M6 6l12 12" styleClass="window-icon" /></graphic>
                                </JFXButton>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="32.0" right="16.0" />
                    </padding>
                </HBox>
            </top>
            <center>
                <ScrollPane fx:id="contentArea" fitToWidth="true" hbarPolicy="NEVER" styleClass="content-scroll-pane" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </center>
