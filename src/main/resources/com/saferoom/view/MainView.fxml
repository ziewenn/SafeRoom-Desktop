<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0" styleClass="main-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.controller.MainController">
    <left>
        <VBox prefWidth="288.0" styleClass="sidebar">
            <children>
                <!-- Logo ve Başlık -->
                <HBox alignment="CENTER" prefHeight="70.0" styleClass="sidebar-header">
                    <children>
                        <Pane prefHeight="40.0" prefWidth="40.0">
                            <children>
                                <SVGPath content="M12 2L2 7V17L12 22L22 17V7L12 2Z M16.5 8C16.5 10 15 11 12 12C9 13 7.5 14 7.5 16" styleClass="sidebar-logo-icon" />
                            </children>
                        </Pane>
                    </children>
                </HBox>
                <!-- Menü Butonları -->
                <VBox fx:id="navBox" styleClass="sidebar-nav" VBox.vgrow="ALWAYS">
                    <children>
                        <JFXButton fx:id="dashboardButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Dashboard" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-dice-d6" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <!-- YENİ: Rooms Butonu Eklendi -->
                        <JFXButton fx:id="roomsButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Rooms" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-network-wired" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="messagesButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Messages" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-comment" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="friendsButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Friends" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-user-friends" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="fileVaultButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="File Vault" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="far-file-alt" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="settingsButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Settings" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-cog" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                    </children>
                </VBox>
                <VBox styleClass="sidebar-footer">
                    <children>
                        <HBox alignment="CENTER" spacing="12.0" styleClass="sidebar-user-info">
                            <children>
                                <Pane styleClass="user-avatar-container">
                                    <children>
                                        <Label styleClass="user-avatar" text="JD" />
                                        <Pane styleClass="status-indicator" />
                                    </children>
                                </Pane>
                            </children>
                            <padding>
                                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>
    <center>
        <BorderPane styleClass="content-pane" >
            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="16.0" styleClass="header-bar" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="viewTitleLabel" styleClass="view-title" text="Dashboard" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <TextField promptText="Search..." styleClass="search-field" />
                        <JFXButton styleClass="icon-button">
                            <graphic>
                                <FontIcon iconLiteral="fas-bell" styleClass="header-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="newRoomButton" styleClass="action-button" text="New Room">
                            <graphic>
                                <FontIcon iconLiteral="fas-plus" styleClass="action-button-icon" />
                            </graphic>
                        </JFXButton>
                    </children>
                    <padding>
                        <Insets left="32.0" right="16.0" />
                    </padding>
                </HBox>
            </top>
            <center>
                <ScrollPane fx:id="contentArea"
                            fitToWidth="true"
                            fitToHeight="true"
                            hbarPolicy="NEVER"
                            vbarPolicy="AS_NEEDED"
                            styleClass="content-scroll-pane"
                            BorderPane.alignment="CENTER" />

            </center>
        </BorderPane>
    </center>
</BorderPane>
