    <left>
        <VBox prefWidth="288.0" styleClass="sidebar">
            <children>
                <!-- Logo ve Başlık -->
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="12.0" styleClass="sidebar-header">
                    <children>
                        <Pane prefHeight="32.0" prefWidth="32.0">
                            <children>
                                <SVGPath content="M12 2L2 7V17L12 22L22 17V7L12 2Z M16.5 8C16.5 10 15 11 12 12C9 13 7.5 14 7.5 16" styleClass="sidebar-logo-icon" />
                            </children>
                        </Pane>
                        <Label styleClass="sidebar-title" text="SafeRoom" />
                    </children>
                    <padding>
                        <Insets left="16.0" />
                    </padding>
                </HBox>
                <!-- Menü Butonları -->
                <VBox fx:id="navBox" styleClass="sidebar-nav" VBox.vgrow="ALWAYS">
                    <children>
                        <JFXButton fx:id="dashboardButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Dashboard" prefWidth="256.0">
                            <graphic>
                                <StackPane prefHeight="18.0" prefWidth="18.0">
                                    <children><SVGPath content="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" styleClass="nav-icon" /></children>
                                </StackPane>
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="messagesButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Messages" prefWidth="256.0">
                            <graphic>
                                <StackPane prefHeight="18.0" prefWidth="18.0">
                                    <children><SVGPath content="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" styleClass="nav-icon" /></children>
                                </StackPane>
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="friendsButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Friends" prefWidth="256.0">
                            <graphic>
                                <StackPane prefHeight="18.0" prefWidth="18.0">
