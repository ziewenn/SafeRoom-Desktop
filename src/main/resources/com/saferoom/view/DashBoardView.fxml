<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<!--
  YAPILAN DEĞİŞİKLİK:
  - "Quick Actions" VBox'ındaki GridPane'e VBox.vgrow="ALWAYS" eklendi.
  - RowConstraints'e prefHeight="150" eklenerek kartların dikey olarak daha fazla yer kaplaması sağlandı.
  - GridPane'deki maxWidth kaldırıldı.
-->
<VBox spacing="30.0" styleClass="page-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.controller.DashboardController">
    <children>
        <!-- "Welcome Back" Banner'ı -->
        <VBox styleClass="welcome-banner">
            <children>
                <Label styleClass="welcome-title" text="Welcome back, Username!" />
                <Label styleClass="welcome-subtitle" text="You have 2 new notifications and 1 pending room invite." />
            </children>
        </VBox>
        <!-- Ana İçerik Alanı -->
        <HBox spacing="30.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Sol Taraf: Hızlı Eylemler -->
                <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="Quick Actions" />
                        <GridPane hgap="20.0" vgap="20.0" VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <fx:include fx:id="newMeetingCard" source="cards/ActionCard.fxml" />
                                <fx:include fx:id="joinRoomCard" source="cards/ActionCard.fxml" GridPane.columnIndex="1" />
                                <fx:include fx:id="scheduleRoomCard" source="cards/ActionCard.fxml" GridPane.rowIndex="1" />
                                <fx:include fx:id="encryptedFilesCard" source="cards/ActionCard.fxml" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                <!-- Sağ Taraf: Son Aktiviteler -->
                <VBox maxWidth="350.0" minWidth="300.0" spacing="20.0">
                    <children>
                        <Label styleClass="section-title" text="Recent Activity" />
                        <ListView fx:id="activityListView" styleClass="activity-list" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
