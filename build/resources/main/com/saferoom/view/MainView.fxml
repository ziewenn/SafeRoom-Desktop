<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.layout.StackPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0" styleClass="main-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.controller.MainController">
    <left>
        <VBox prefWidth="288.0" styleClass="sidebar">
            <children>
                <!-- Logo ve Başlık -->
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="12.0" styleClass="sidebar-header">
                    <children>
                        <Pane prefHeight="32.0" prefWidth="32.0">
                            <children>
                                <SVGPath content="M12 2L2 7V17L12 22L22 17V7L12 2Z M16.5 8C16.5 10 15 11 12 12C9 13 7.5 14 7.5 16" styleClass="sidebar-logo-icon" />
                            </children>
                        </Pane>
                        <Label styleClass="sidebar-title" text="SafeRoom" />
                    </children>
                    <padding>
                        <Insets left="16.0" />
                    </padding>
                </HBox>
                <!-- Menü Butonları (Ikonli ile güncellendi) -->
                <VBox fx:id="navBox" styleClass="sidebar-nav" VBox.vgrow="ALWAYS">
                    <children>
                        <JFXButton fx:id="dashboardButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Dashboard" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-dice-d6" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="messagesButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Messages" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-comment" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="friendsButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Friends" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-user-friends" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="fileVaultButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="File Vault" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="far-file-alt" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="settingsButton" alignment="CENTER_LEFT" graphicTextGap="12.0" styleClass="nav-button" text="Settings" prefWidth="256.0">
                            <graphic>
                                <FontIcon iconLiteral="fas-cog" styleClass="nav-icon" />
                            </graphic>
                        </JFXButton>
                    </children>
                </VBox>
                <VBox styleClass="sidebar-footer">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="12.0">
                            <children>
                                <Label styleClass="user-avatar" text="U" />
                                <VBox>
                                    <children>
                                        <Label styleClass="user-name" text="Username" />
                                        <Label styleClass="user-status" text="Online" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>
    <center>
        <BorderPane styleClass="content-pane">
            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="16.0" styleClass="header-bar" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="viewTitleLabel" styleClass="view-title" text="Dashboard" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <TextField promptText="Search..." styleClass="search-field" />
                        <JFXButton styleClass="icon-button">
                            <graphic>
                                <FontIcon iconLiteral="fas-bell" styleClass="header-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="newRoomButton" styleClass="action-button" text="New Room">
                            <graphic>
                                <FontIcon iconLiteral="fas-plus" styleClass="action-button-icon" />
                            </graphic>
                        </JFXButton>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                            <children>
                                <JFXButton fx:id="minimizeButton" styleClass="window-button">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-minus" styleClass="window-icon" />
                                    </graphic>
                                </JFXButton>
                                <JFXButton fx:id="maximizeButton" styleClass="window-button">
                                    <graphic>
                                        <FontIcon iconLiteral="far-square" styleClass="window-icon" />
                                    </graphic>
                                </JFXButton>
                                <JFXButton fx:id="closeButton" styleClass="window-button-close">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-times" styleClass="window-icon" />
                                    </graphic>
                                </JFXButton>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="32.0" right="16.0" />
                    </padding>
                </HBox>
            </top>
            <center>
                <ScrollPane fx:id="contentArea" fitToWidth="true" hbarPolicy="NEVER" styleClass="content-scroll-pane" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </center>
</BorderPane>
